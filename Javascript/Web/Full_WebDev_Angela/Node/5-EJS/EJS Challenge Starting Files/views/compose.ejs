<%- include("partials/header") -%>

    <div>
        <h1><%= Title %></h1>
    </div>


<form class="item" action="/compose" method="post">

    <div class="form-group">
        <input type="text" class="form-control compose" name="postTitle" placeholder="Title" rows="1" cols="2">
        <textarea type="text" class="form-control compose" name="postBody" placeholder="Entry" rows="5" cols="30"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-primary">Publish!</button>
</form>



